<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.ivlm.goodbudget.Home">
    <include
        android:id="@+id/toolbar"
    layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:id="@+id/linearLayout"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add Envelope"
                    android:id="@+id/AddEnvelope"
                    android:textSize="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="#3798ff"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:background="#c6c6c6"
                android:id="@+id/linearLayout5">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/MenuMonthly"
                    android:src="@drawable/menu_bar"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Monthly"
                    android:id="@+id/TextTimeSet"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/MenuMonthly" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout5"
                android:id="@+id/relativeLayout2"
                android:visibility="visible">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:id="@+id/ListViewMonthly"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:visibility="visible"
                    android:background="#00ffffff" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#c6c6c6"
                android:id="@+id/relativeLayout"
                android:layout_below="@+id/relativeLayout2"
                android:layout_alignParentStart="true" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/MenuOther"
                    android:src="@drawable/menu_bar"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Year"
                    android:id="@+id/TextTimeOther"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/MenuOther" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:id="@+id/relativeLayout3"
                android:visibility="visible">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:id="@+id/ListViewOther"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/relativeLayout3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/RelativeLayoutIncome"
                        android:background="#dddddd"
                        android:layout_below="@+id/relativeLayout3"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="left|center_vertical"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView4"
                            android:src="@drawable/reeba_icon_mdpi"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="5dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Estimated"
                                android:id="@+id/textView7"
                                android:textSize="15dp"
                                android:layout_alignParentTop="true"
                                android:layout_toEndOf="@+id/imageView4"
                                android:layout_marginLeft="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Income"
                                android:id="@+id/textView8"
                                android:textSize="15dp"
                                android:layout_below="@+id/textView7"
                                android:layout_toEndOf="@+id/imageView4"
                                android:layout_marginLeft="5dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Monthly"
                                android:id="@+id/textView9"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_above="@+id/textView8"
                                android:layout_toEndOf="@+id/textView7"
                                android:layout_marginLeft="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="---"
                                android:id="@+id/TextTotalIncome"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="5dp"
                                android:layout_alignBaseline="@+id/textView8"
                                android:layout_alignBottom="@+id/textView8"
                                android:layout_alignStart="@+id/textView9" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/imageView5"
                            android:src="@drawable/ic_arrow"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="1"
                        android:id="@+id/relativeLayout4"
                        android:visibility="visible"
                        android:background="#2bbf8b"
                        android:layout_below="@+id/relativeLayout3"
                        android:layout_toEndOf="@+id/RelativeLayoutIncome"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="1.5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Total"
                            android:id="@+id/textView4"
                            android:textSize="13dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Large Text"
                            android:id="@+id/TextTotalAmounts"
                            android:textSize="13dp"
                            android:layout_below="@+id/textView4"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="5dp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/relativeLayout5"
                    android:background="#ffffff"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="&lt; Back"
                            android:id="@+id/TextBack"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:padding="10dp"
                            android:textColor="#5b9eff" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Next >"
                            android:id="@+id/TextSave"
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="#5b9eff"
                            android:gravity="right" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
