<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.ivlm.goodbudget.Home">
    <include
        android:id="@+id/toolbar"
    layout="@layout/toolbar" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/linearLayout"
        android:layout_weight="1.25">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+ Add Envelope"
                android:id="@+id/AddEnvelope"
                android:textSize="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="#3798ff"
                android:textColor="#ffffff"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#c6c6c6"
        android:id="@+id/linearLayout"
        android:layout_weight="1.4">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:id="@+id/MenuMonthly"
            android:src="@drawable/menu_bar"
            android:layout_marginLeft="5dp"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Monthly"
            android:id="@+id/TextTimeSet"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:visibility="visible"
        android:layout_weight="1">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ListViewMonthly"
            android:visibility="visible"
            android:background="#00ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#c6c6c6"
        android:id="@+id/linearLayout"
        android:layout_weight="1.4">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:id="@+id/MenuOther"
            android:src="@drawable/menu_bar"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:contentDescription="menu_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Year"
            android:id="@+id/TextTimeOther"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/linearLayout"
        android:layout_weight="1"
        android:visibility="gone">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:id="@+id/ListViewOther"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/relativeLayout3"
        android:layout_weight="1.2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RelativeLayoutIncome"
                android:background="#dddddd"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView4"
                    android:src="@drawable/reeba_icon_mdpi"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.2"
                    android:padding="1dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Estimated"
                        android:id="@+id/textView7"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="bottom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Income"
                        android:id="@+id/textView8"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Monthly"
                        android:id="@+id/textView9"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_above="@+id/textView8"
                        android:layout_toEndOf="@+id/textView7"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="bottom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="---"
                        android:id="@+id/TextTotalIncome"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView5"
                    android:src="@drawable/ic_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.35" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/relativeLayout4"
                android:visibility="visible"
                android:background="#2bbf8b"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1.5" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Total"
                    android:id="@+id/textView4"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_weight="1.7"
                    android:gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/TextTotalAmounts"
                    android:textSize="13sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/relativeLayout5"
            android:background="#ffffff"
            android:layout_weight="1.5" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="&lt; Back"
                    android:id="@+id/TextBack"
                    android:textColor="#5b9eff"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Next >"
                    android:id="@+id/TextSave"
                    android:textColor="#5b9eff"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical|right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
